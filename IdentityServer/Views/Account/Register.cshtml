@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}


<div class="hero">
    <div class="hero-body">
        <div class="has-text-centered">
            <div class="column is-4-desktop is-offset-4-desktop  is-6-tablet is-offset-3-tablet">
                <h3 class="title is-font-rock has-text-weight-bold has-text-primary">Tricking Royal</h3>
                <div class="box is-faded">
                    <h3 class="title has-text-white">Register </h3>
                    <form asp-controller="Account" asp-action="Register" method="post">
                        <input type="hidden" asp-for="@Model.ReturnUrl" value="@Model.ReturnUrl"/>
                        <div class="field">
                            <div class="control">
                                <input class="input" asp-for="DisplayName" placeholder="Enter Username (trix_god)" autofocus="">
                                <span asp-validation-for="DisplayName" class="help is-danger"></span>
                            </div>
                        </div>
                        <div class="field">
                            <div class="control">
                                <input class="input" asp-for="Email" placeholder="Enter Email (trix_god@gmail.com)">
                                <span asp-validation-for="Email" class="help is-danger"></span>
                            </div>
                        </div>
                        <div class="field">
                            <div class="control">
                                <input class="input" asp-for="Password" placeholder="Your Password...">
                                <span asp-validation-for="Password" class="help is-danger"></span>
                            </div>
                        </div>
                        <div class="field">
                            <div class="control">
                                <input class="input" asp-for="ConfirmPassword" placeholder="Confirm Password...">
                                <span asp-validation-for="ConfirmPassword" class="help is-danger"></span>
                            </div>
                        </div>
                        <div class="field">
                            <button class="button is-block is-info is-fullwidth">Register</button>
                        </div>
                    </form>
                    <div class="field">
                        <a asp-controller="Account" asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl" class="button">Back to Login</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}