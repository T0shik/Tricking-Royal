@{
    ViewData["Title"] = "Forgot Password Confirmation";
}

<div class="hero">
    <div class="hero-body">
        <div class="has-text-centered">
            <div class="column is-4-desktop is-offset-4-desktop  is-6-tablet is-offset-3-tablet">
                <h3 class="title is-font-rock has-text-weight-bold has-text-primary">Tricking Royal</h3>
                <div class="box is-faded">
                    <h3 class="title has-text-white">Email Sent</h3>
                    <h3 class="subtitle has-text-white">Please check your email to reset your password.</h3>
                    <div class="field">
                        <a class="button" asp-action="Login">Back to Login</a>
                    </div>
                    <div class="field">
                        <a class="has-text-link" onclick="location.reload()">Re-send link?</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>